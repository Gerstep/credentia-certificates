{
  "name": "credentia-certs-api",
  "version": "0.0.1",
  "license": "MIT",
  "scripts": {
    "dev": "tsnd --respawn --transpileOnly src/bootstrap.ts",
    "build": "rm -rf .build/ && tsc --project tsconfig.json && yarn copy-files",
    "copy-files": "cp -r src/files .build/",
    "postinstall": "rm -rf .build/ && tsc --project tsconfig.json",
    "start": "node .build/bootstrap.js",
    "lint": "tslint -p tsconfig.json",
    "test": "jest --coverage",
    "processes-8000": "ss -lptn 'sport = :8000'",
    "processes-node": "ps -e|grep node",
    "kill-processes-at-port": "lsof -i tcp:8000 | awk 'NR!=1 {print $2}' | xargs kill",
    "docker:build": "yarn lint && yarn test && docker image build . -t credentia-certs-api:latest",
    "docker:run": "yarn docker:clean && yarn docker:runHelper",
    "docker:runHelper": "docker run --name credentia-certs-api -d -p 8000:8000 credentia-certs-api:latest",
    "docker:clean": "docker rm -f credentia-certs-api || true",
    "docker:taillogs": "docker logs -f credentia-certs-api",
    "docker:debug": "yarn docker:build && yarn docker:run && yarn docker:taillogs"
  },
  "jest": {
    "coverageDirectory": "./.coverage",
    "preset": "ts-jest",
    "testPathIgnorePatterns": [
      ".build"
    ]
  },
  "dependencies": {
    "@types/crypto-js": "^3.1.43",
    "@types/mongoose": "^5.5.6",
    "@types/node": "12.6.3",
    "argon2": "^0.24.0",
    "axios": "^0.19.0",
    "bignumber.js": "^9.0.0",
    "bluebird": "^3.5.5",
    "boom": "^7.3.0",
    "compression": "1.7.4",
    "connect-mongo": "3.0.0",
    "cors": "^2.8.5",
    "crypto-js": "^3.1.9-1",
    "crypto-random-string": "^3.0.1",
    "ethereumjs-wallet": "^0.6.3",
    "ethers": "^4.0.33",
    "express": "4.17.3",
    "express-async-errors": "^3.1.1",
    "express-session": "1.16.2",
    "he": "1.2.0",
    "helmet": "3.18.0",
    "i18next": "^17.0.4",
    "i18next-express-middleware": "^1.8.0",
    "i18next-node-fs-backend": "^2.1.3",
    "inversify": "^5.0.1",
    "inversify-express-utils": "^6.3.2",
    "js-sha256": "^0.9.0",
    "jsonld": "^1.6.2",
    "jsonwebtoken": "^8.5.1",
    "marko": "^4.18.10",
    "mongoose": "5.6.4",
    "pino": "^5.12.6",
    "pino-pretty": "^3.2.0",
    "qs": "6.7.0",
    "reflect-metadata": "^0.1.13",
    "sendpulse-api": "^1.1.2",
    "socket.io": "^2.2.0",
    "solc": "^0.5.8",
    "stoppable": "^1.1.0",
    "ts-custom-error": "^3.1.0",
    "typescript": "3.5.3",
    "uuid": "^3.3.2",
    "web3": "^1.0.0-beta.55"
  },
  "devDependencies": {
    "@types/axios": "^0.14.0",
    "@types/bluebird": "^3.5.27",
    "@types/boom": "^7.2.1",
    "@types/compression": "^0.0.36",
    "@types/connect-mongo": "^0.0.42",
    "@types/cors": "^2.8.5",
    "@types/express": "4.17.0",
    "@types/express-session": "^1.15.13",
    "@types/helmet": "^0.0.43",
    "@types/i18next": "^12.1.0",
    "@types/i18next-express-middleware": "^0.0.33",
    "@types/i18next-node-fs-backend": "^0.0.30",
    "@types/inversify": "^2.0.33",
    "@types/inversify-express-utils": "^2.0.0",
    "@types/jest": "^24.0.15",
    "@types/jsonld": "^1.5.0",
    "@types/jsonwebtoken": "^8.3.2",
    "@types/marko": "^4.6.0",
    "@types/pino": "^5.8.8",
    "@types/socket.io": "^2.1.2",
    "@types/stoppable": "^1.1.0",
    "@types/uuid": "^3.4.4",
    "husky": "2.7.0",
    "jest": "24.8.0",
    "mockingoose": "^2.13.1",
    "ts-jest": "^24.0.2",
    "ts-node": "8.3.0",
    "ts-node-dev": "^1.0.0-pre.40",
    "tslint": "5.18.0"
  }
}
